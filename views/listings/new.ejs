<%- layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mt-3">
          <label for="listing-tital" class="form-label">Title</label>
          <input name="listing[title]" id="listing-tital" class="form-control" placeholder="Add Catchy title" type="text" required/>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a valid Name.</div>
        </div>
        <div class="mt-3">
          <label for="listing-description" class="form-label">Description</label>
          <textarea name="listing[description]" id="listing-description" class="form-control" placeholder="Enter description" required></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a valid discription</div>
        </div>
        <div class="mt-3">
          <label for="listing-image" class="form-label">Upload Image</label>
          <input name="listing[image]" id="listing-image" class="form-control" type="file" required/>
        </div>

        <div class="row">
            <div class="mt-3 col-md-4">
              <label for="listing-price" class="form-label">Price</label>
              <input name="listing[price]" id="listing-price" class="form-control" placeholder="1200" required/>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a valid Price</div>
            </div>
            <div class="mt-3 col-md-8">
              <label for="listing-country" class="form-label">Country</label>
              <input name="listing[country]" id="listing-country" class="form-control" placeholder="India" type="text" required/>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a valid Country Name</div>
            </div>
        </div>

        <div class="mt-3">
          <label for="listing-location" class="form-label">Location</label>
          <input name="listing[location]" id="listing-location" class="form-control" placeholder="Jaipur, Rajsthan" type="text" required/>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Location is required</div>
        </div>
       <button class="btn btn-dark mt-5 add-btn">Add</button>
      </form>
    </div>
  </div>
</body>